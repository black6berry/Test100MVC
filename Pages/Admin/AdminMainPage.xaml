<Page x:Class="Test100.Pages.Admin.AdminMainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Test100.Pages.Admin"
      mc:Ignorable="d" 
      d:DesignHeight="450" 
      d:DesignWidth="800"
      Title="Окно Администратора"
      MinHeight="450"
      MinWidth="800">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="7*"/>
            <RowDefinition Height="68*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10*"/>
            <ColumnDefinition Width="30*"/>
        </Grid.ColumnDefinitions>


        <StackPanel>

        </StackPanel>


        <StackPanel 
            Grid.Row="1"
            Grid.Column="0"
            Grid.RowSpan="2"
            Orientation="Vertical" 
            MinHeight="450" 
            MinWidth="200"
            VerticalAlignment="Top" 
            HorizontalAlignment="Center" 
            >

            <StackPanel 
                VerticalAlignment="Top"
                MinHeight="400">
                <GroupBox Header="Firstname"
                          Margin="0 10 0 0 ">
                    <TextBox
                        Name="TxbFirstname"
                        />
                </GroupBox>

                <GroupBox Header="Lastname"
                          Margin="0 10 0 0 ">
                    <TextBox
                        Name="TxbLastname"
                           />
                </GroupBox>

                <GroupBox Header="Patronymic"
                          Margin="0 10 0 0 ">
                    <TextBox
                        Name="TxbPatronymic"
                           />
                </GroupBox>

                <GroupBox Header="Phone"
                          Margin="0 10 0 0 ">
                    <TextBox
                        Name="TxbPhone"
                           />
                </GroupBox>

                <GroupBox Header="Role">
                    <ComboBox 
                        Name="CmbRole"
                        Margin="0 10 0 0 "
                        DisplayMemberPath="Name"
                        SelectedValuePath="Id"
                        
                            />
                </GroupBox>


                <GroupBox Header="Password"
                          Margin="0 10 0 0 ">
                    <PasswordBox
                        Name="PsbPassword"
                            />
                </GroupBox>

                <GroupBox Header="Repeat Password"
                        Margin="0 10 0 0 ">
                    <PasswordBox
                        Name="PsbPasswordRepeat"/>
                </GroupBox>


            </StackPanel>

            <StackPanel 
                VerticalAlignment="Bottom"
                Margin="0 0 0 10" >

                <Button
                    x:Name="BtnAdd"
                    Content="Добавить"
                    Click="BtnAdd_Click" 
                    Height="30"
                        />
                <Button
                     x:Name="BtnDelete"
                     Content="Удалить"
                     Click="BtnDelete_Click"
                    Height="30"
                    />
            </StackPanel>
        </StackPanel>


        <StackPanel
            Grid.Row="1"
            Grid.Column="1"
            Height="500"
            >
            <DataGrid
                x:Name="DgUsers"
                AutoGenerateColumns="False"
                CanUserAddRows="False"
                
                >
                <DataGrid.Columns>
                    <DataGridTextColumn 
                        Header="Id"
                        Width="1"
                        Binding="{Binding Id}"/>

                    <DataGridTextColumn 
                        Header="Firstname"
                        Width="*"
                        Binding="{Binding Firstname}"/>

                    <DataGridTextColumn 
                        Header="Lastname"
                        Width="*"
                        Binding="{Binding Lastname}"/>

                    <DataGridTextColumn 
                        Header="Patronymic"
                        Width="*"
                        Binding="{Binding Patronymic}"/>

                    <DataGridTextColumn 
                        Header="Phone"
                        Width="*"
                        Binding="{Binding Phone}"/>

                    <DataGridTextColumn 
                        Header="RoleUser"
                        Width="*"
                        Binding="{Binding Role.Name}"/>

                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>
    </Grid>
</Page>
