<Page x:Class="Test100.Pages.Admin.AdminMainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Test100.Pages.Admin"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AdminMainPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10*"/>
            <ColumnDefinition Width="30*"/>
        </Grid.ColumnDefinitions>

        <StackPanel 
            Orientation="Vertical"
            >

            <StackPanel 
                VerticalAlignment="Top">
                <GroupBox Header="Firstname">
                    <TextBox
                        Name="TxbFirstname"
                        />
                </GroupBox>
                
                <GroupBox Header="Lastname">
                    <TextBox
                        Name="TxbLastname"
                           />
                </GroupBox>
                <GroupBox Header="Patronymic">
                    <TextBox
                        Name="TxbPatronymic"
                           />
                </GroupBox>
                <GroupBox Header="Phone">
                    <TextBox
                        Name="TxbPhone"
                           />
                </GroupBox>
                <ComboBox 
                    Name="CmbRole"
                        />

            </StackPanel>

            <StackPanel 
                
                VerticalAlignment="Bottom">
                

                <Button
                    x:Name="BtnAdd"
                    Content="Добавить"
                    Click="BtnAdd_Click" 
                    Height="30"
                        />
                <Button
                     x:Name="BtnDelete"
                     Content="Удалить"
                     Click="BtnDelete_Click"
                    Height="30"
                    />
            </StackPanel>
        </StackPanel>
        

        <StackPanel
            Grid.Row="0"
            Grid.Column="1"
            Height="500"
            >
            <DataGrid
                x:Name="DgUsers"
                AutoGenerateColumns="False"
                CanUserAddRows="False"
                
                >
                <DataGrid.Columns>
                    <DataGridTextColumn 
                        Header="Id"
                        Width="*"
                        Binding="{Binding Id}"/>

                    <DataGridTextColumn 
                    Header="Firstname"
                    Width="*"
                    Binding="{Binding Firstname}"/>

                    <DataGridTextColumn 
                        Header="Lastname"
                        Width="*"
                        Binding="{Binding Lastname}"/>
                    
                    <DataGridTextColumn 
                        Header="Patronymic"
                        Width="*"
                        Binding="{Binding Patronymic}"/>
                    
                    <DataGridTextColumn 
                        Header="Phone"
                        Width="*"
                        Binding="{Binding Phone}"/>

                    <DataGridTextColumn 
                        Header="RoleUser"
                        Width="*"
                        Binding="{Binding Role.Name}"/>

                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>
    </Grid>
</Page>
