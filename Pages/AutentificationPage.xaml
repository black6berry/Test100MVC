<Page x:Class="Test100.Pages.AutentificationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Test100.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" 
      d:DesignWidth="800"
      Title="">

    <Grid Background="#FFFFFF">
        <StackPanel 
            VerticalAlignment="Center"
            Width="200"
            >
            <Image Source="/Resources/logo.png" Height="200" Width="200" />
            <Label 
                Content="Авторизация"
                FontSize="16"
                HorizontalAlignment="Center"
                Margin="0 20 0 0"/>
            <GroupBox Header="Введите логин">
                <TextBox 
                    x:Name="TxbPhone"
                    Height="20"
                    Text="89087654321"/>
            </GroupBox>
            <GroupBox Header="Введите пароль">
                <PasswordBox 
                    x:Name="PsbPass"
                    Height="20"
                    PasswordChar="*"
                    Margin="0 10 0 0"
                    Password="2"/>
            </GroupBox>
            <Button 
                x:Name="BtnAutentification"
                Content="Войти"
                Click="BtnAutentification_Click"/>
        </StackPanel>
        
    </Grid>
</Page>
